                  <input id="password" type="password" name="password" placeholder="password" required>
                  <button id="nav-login-button" class="btn" type="submit" name="button">Sign in</button></br>
                  <small id="error-text">Error text goes here<small>
                </div>
                {% endif %}
            </div>

            <div class="jumbotron">
                <h1>RSVParty</h1>
            </div>
        </div>
        <div class="container">
            {% block content %}
            {% endblock %}
        </div>
