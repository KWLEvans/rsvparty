<style>
     #map {
      height: 400px;
      width: 100%;
     }
  </style>
 <div id="map"></div>
<script>
   function initMap() {
     var location = {lat: {{lat}}, lng: {{long}}};
     var map = new google.maps.Map(document.getElementById('map'), {
       zoom: 12,
       center: location
     });
     var marker = new google.maps.Marker({
       position: location,
       map: map
     });
   }
 </script>
 <script async defer
 src="https://maps.googleapis.com/maps/api/js?key={{key}}&callback=initMap">
 </script>

{% endblock %}
